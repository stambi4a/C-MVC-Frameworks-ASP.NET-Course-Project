@using ESportsEventsApp.Extensions
@using ViewModels;
@model IEnumerable<CountryViewModel>

<p>
    @Html.ActionLink("Create new country", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Flag)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
        @if (item.Flag != null)
        {
            @Html.Image(item.Flag.Url, string.Empty, "width:30px; height:auto;")
        }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
            @Html.ActionLink("Edit Flag", "EditFlag", new { id = item.Id }) |
            @Html.ActionLink("Edit Flag Local", "EditFlagLocal", new { id = item.Id })
        </td>
    </tr>
}

</table>
