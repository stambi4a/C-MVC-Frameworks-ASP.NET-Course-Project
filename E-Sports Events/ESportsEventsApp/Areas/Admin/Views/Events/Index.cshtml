@using ESportsEventsApp.Extensions
@using ViewModels;
@model IEnumerable<EventViewModel>

@{
    ViewBag.Title = "Index";
}
<p>
    @Html.ActionLink("Create New Event", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Name("Logo")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrizePool)
        </th>
        <th>
            @Html.DisplayNameFor(model=>model.EventAdmins)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        @Html.HiddenFor(model => item.Id)
        <tr>
            <td>
                @if (item.Logo != null)
                {
                    @Html.Image(item.Logo.Url, string.Empty, "width:50px; height:auto;")
                }                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrizePoolToString)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventAdminsToString )
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                @Html.ActionLink("Associate Admin", "AssociateAdmin", new { id = item.Id }) |
                @Html.ActionLink("Dissociate Admin", "DissociateAdmin", new { id = item.Id })
            </td>
        </tr>
    }
</table>
