@using ESportsEventsApp.Extensions
@using ViewModels;

@model IEnumerable<TeamViewModel>
<p>
    @Html.ActionLink("Create new team", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TeamLogo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @if (item.TeamLogo != null)
            {
                @Html.Image(item.TeamLogo.Url, string.Empty, "width:50px; height:auto;")
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }) |
            @Html.ActionLink("Edit Team Logo", "EditTeamLogo", new { id = item.Id }) |
            @Html.ActionLink("Edit TeamLogo Local", "EditTeamLogoLocal", new { id = item.Id })
        </td>
    </tr>
}

</table>
