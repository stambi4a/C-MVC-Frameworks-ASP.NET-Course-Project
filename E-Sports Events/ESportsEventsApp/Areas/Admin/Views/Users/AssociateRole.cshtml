@model BindingModels.AssociateRoleBindingModel

@{
    ViewBag.Title = "Associate Role for ";
    var AssociatedRoles = Model.AssociatedRoles;
    var roles = new List<string>()
                    {
                        "Admin",
                        "ArticleAuthor",
                        "EventAdmin",
                        "Volunteer",
                        "Guest",
                        "Buyer",
                        "Seller"
                    };
    var availableRoles = roles.Except(AssociatedRoles.ToList()).Select(r => new SelectListItem() { Text = r, Value = r });
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-4 col-md-6 col-sm-8">
            <div class="form-horizontal">
                <h3>@ViewBag.Title@Model.Username</h3>
                <hr />
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                <div class="form-group">
                    @Html.LabelFor(model => model.AssociatedRoles, htmlAttributes: new { @class = "control-label col-lg-4 col-md-4 col-sm-6" })
                    <div class="col-lg-8 col-md-8 col-sm-6">
                        @Html.DisplayFor(model => model.RolesToString)
                    </div>
                </div>
                <div class="form-group">
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.AvailableRoles, htmlAttributes: new { @class = "control-label col-lg-4 col-md-4 col-sm-6" })
                    <div class="col-lg-8 col-md-8 col-sm-6">
                        @Html.DropDownListFor(model => model.AddedRole, availableRoles, new { @class = "form-control" } )
                        @Html.ValidationMessageFor(model => model.AddedRole, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    </div>
 }
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
