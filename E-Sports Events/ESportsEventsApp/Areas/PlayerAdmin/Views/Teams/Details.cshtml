@using ESportsEventsApp.Extensions
@using ViewModels
@model TeamViewModel

@{
    ViewBag.Title = $"Details for {Model.Name}";
}
<div>
    <h4>@ViewBag.Title</h4>
    <div class="responsive">
        <table class="table">
            <tr>
                <td class="col-lg-4 col-md-4 col-sm-8">
                    <div class="responsive">
                        <table class="table-striped">
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.Name)</td>
                                <td>@Html.DisplayFor(model => model.Name)</td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.Country)</td>
                                @if (Model.Country.Name != "No country")
                                {
                                    <td>@Html.ActionLink(Model.Country.Name, "Details", "Countries", new { area = "LocationAdmin", id = Model.Country.Id }, new { @class = "table-link" })</td>
                                }                 
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.Players)</td>
                                <td>
                                    @{
                                        var players = Model.Players.ToArray();
                                        for (var i = 0; i < players.Length - 1; i++)
                                        {
                                            @Html.ActionLink(players[i].Alias + ", ", "Details", "Players", new { area = "PlayerAdmin", id = players[i].Id }, new { @class = "table-link" })
                                        }
                                        if (players.Length > 0)
                                        {
                                            @Html.ActionLink(players[players.Length - 1].Alias, "Details", "Players", new { area = "PlayerAdmin", id = players[players.Length - 1].Id }, new { @class = "table-link" })
                                        }
                                    }
                                </td>
                            </tr>
                        </table>
                    </div>
                </td>
                <td class="col-lg-2 col-md-2 col-sm-4">
                    <ul>
                        <li>@Html.ActionLink("All teams", "Index", null, new { @class = "btn btn-primary" })</li>
                        <li>@Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })</li>
                        <li>@Html.ActionLink("Delete", "Delete", new { id = Model.Id }, new { @class = "btn btn-primary" })</li>
                        <li>@Html.ActionLink("Edit Team Logo", "EditTeamLogo", new { id = Model.Id }, new { @class = "btn btn-primary" })</li>
                        <li>@Html.ActionLink("Edit Team Logo local", "EditTeamLogoLocal", new { id = Model.Id }, new { @class = "btn btn-primary" })</li>
                    </ul>
                </td>
                <td></td>
            </tr>
        </table>
    </div>
</div>
