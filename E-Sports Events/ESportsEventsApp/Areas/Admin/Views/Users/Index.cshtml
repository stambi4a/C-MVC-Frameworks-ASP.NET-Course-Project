@using ViewModels
@model IEnumerable<ViewModels.RegisteredUserViewModel>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Create New User", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Roles)
        </th>
        <th>
            @Html.Name("Date Added")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Roles)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAdded)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", "Users", new { Area = "Admin", id = item.Id }, null) |
                @Html.ActionLink("Edit", "Edit", "Users", new { Area = "Admin", id = item.Id }, null) |
                @Html.ActionLink("Associate Role", "AssociateRole", "Users", new { Area = "Admin", id = item.Id }, null) |
                @Html.ActionLink("Dissociate Role", "DissociateRole", "Users", new { Area = "Admin", id = item.Id }, null) |
                @Html.ActionLink("Delete", "Delete", "Users", new { Area = "Admin", id = item.Id }, null)
            </td>
        </tr>
    }
</table>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
