@using BindingModels
@using ESportsEventsApp.Extensions
@model FlagBindingModel

@{
    ViewBag.Title = $"Edit flag from local storage for ";
}

@using (Html.BeginForm("EditFlagLocal", "Countries", new { Area = "LocationAdmin" }, FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-4 col-md-6 col-sm-6">
            <div class="form-horizontal">
                <h4>@ViewBag.Title<strong>@ViewBag.CountryName</strong></h4>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <br />
                <div class="responsive">
                    <table class="table-striped">
                        <tr>
                            <td class="left-cell col-lg-2 col-md-3 col-sm-4">
                                @Html.LabelForModel("Flag", htmlAttributes: new { @style = "font-weight: normal;" })
                            </td>
                            <td class="right-cell col-lg-2 col-md-3 col-sm-4">
                                <div>
                                    @(!string.IsNullOrEmpty(@Model?.Url) ? Html.Image(Model.Url, string.Empty, "width: 50px;") : Html.DisplayText("None"))
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td class="left-cell col-lg-2 col-md-3 col-sm-4">
                                @Html.LabelForModel("File name", new { @style = "font-weight: normal;margin-top:5px;" })
                            </td>
                            <td class="left-cell col-lg-2 col-md-3 col-sm-4">
                                <div>
                                    @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @type = "file", value = "index.png" } })
                                    @Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger" })
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
                <br />
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="col-lg-2 col-md-3 col-sm-3" style="padding-top: 40px;">
            <ul>
                <li>@Html.ActionLink("All countries", "Index", null, new { @class = "btn btn-primary" })</li>
                <li>@Html.ActionLink("Details", "Details", new { id = Model.Id }, new { @class = "btn btn-primary" })</li>
                <li>@Html.ActionLink("Delete", "Delete", new { id = Model.Id }, new { @class = "btn btn-primary" })</li>
                <li>@Html.ActionLink("Edit Flag", "EditFlag", new { id = Model.Id }, new { @class = "btn btn-primary" })</li>
                <li>@Html.ActionLink("Edit Flag Local", "EditFlagLocal", new { id = Model.Id }, new { @class = "btn btn-primary" })</li>
            </ul>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
