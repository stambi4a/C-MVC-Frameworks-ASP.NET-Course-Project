@using BindingModels
@model CityBindingModel

@{
    ViewBag.Title = "Create new city";
    var availableCountries = Model.AvailableCountries.Select(aa => new SelectListItem() { Text = aa.Name, Value = aa.Id.ToString() });
}

@using (Html.BeginForm("Create", "Cities", new { Area = "LocationAdmin" }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-4 col-md-5 col-sm-6">
            <div class="form-horizontal">
                <h4>@ViewBag.Title</h4>
                <div class="responsive">
                    <table class="table-striped">
                        <tr>
                            <td class="left-cell col-lg-2 col-md-3 col-sm-4">
                                @Html.LabelFor(model => model.Name, new { @style = "font-weight: normal;" })
                            </td>
                            <td class="right-cell col-lg-2 col-md-3 col-sm-4">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter name..." } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td class="left-cell col-lg-2 col-md-3 col-sm-4">
                                @Html.LabelFor(model => model.Country, new { @style = "font-weight: normal;" })
                            </td>
                            <td class="right-cell col-lg-2 col-md-3 col-sm-4">
                                @Html.DropDownListFor(model => model.CountryId, availableCountries, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.AvailableCountries, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                    </table>
                </div>
                <br />
                <div class="form-group">
                    <div class="col-lg-3 col-md-3 col-sm-3">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6">
                        @Html.ActionLink("All cities", "Index", null, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
            <br />
            <br />
        </div>
    </div>
}

<div class="col-md-4">
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
