@using BindingModels
@using ESportsEventsApp.Extensions
@model EventBindingModel

@{
    ViewBag.Title = $"Edit event";
    var availableCountries = Model.AvailableCountries.Select(ac => new SelectListItem { Text = ac.Name, Value = ac.Id.ToString() });
    var availableCities = Model.AvailableCities.Select(aa => new SelectListItem() { Text = aa.Name, Value = aa.Id.ToString() });
    var availableVenues = Model.AvailableVenues.Select(aa => new SelectListItem() { Text = aa.Name, Value = aa.Id.ToString() });
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-4 col-md-5 col-sm-6">
            <div class="form-horizontal">
                <h4>@ViewBag.Title</h4>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                <div class="responsive">
                    <table class="table-striped">
                        <tr>
                            <td class="left-cell col-lg-2 col-md-3 col-sm-4">
                                @Html.LabelFor(model => model.Name, new { @style = "font-weight: normal;" })
                            </td>
                            <td class="right-cell col-lg-2 col-md-3 col-sm-4">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td class="left-cell col-lg-2 col-md-3 col-sm-4">
                                @Html.LabelFor(model => model.Country, new { @style = "font-weight: normal;" })
                            </td>
                            <td class="right-cell col-lg-2 col-md-3 col-sm-4">
                                @Html.ActionLink(Model.Country.Name, "Details", "Countries", new { area = "LocationAdmin", id = Model.Country.Id }, new { @class = "table-link" })
                                @Html.ValidationMessageFor(model => model.Country.Name, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td class="left-cell col-lg-2 col-md-3 col-sm-4">
                                @Html.LabelFor(model => model.AvailableCountries, new { @style = "font-weight: normal;" })
                            </td>
                            <td class="right-cell col-lg-2 col-md-3 col-sm-4">
                                @Html.DropDownListFor(model => model.CountryId, availableCountries, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.AvailableCountries, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td class="left-cell col-lg-2 col-md-3 col-sm-4">
                                @Html.LabelFor(model => model.City, new { @style = "font-weight: normal;" })
                            </td>
                            <td class="right-cell col-lg-2 col-md-3 col-sm-4">
                                @Html.ActionLink(Model.City.Name, "Details", "Cities", new { area = "LocationAdmin", id = Model.City.Id }, new { @class = "table-link" })
                                @Html.ValidationMessageFor(model => model.City.Name, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td class="left-cell col-lg-2 col-md-3 col-sm-4">
                                @Html.LabelFor(model => model.AvailableCities, new { @style = "font-weight: normal;" })
                            </td>
                            <td class="right-cell col-lg-2 col-md-3 col-sm-4">
                                @Html.DropDownListFor(model => model.CityId, availableCities, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.AvailableCities, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td class="left-cell col-lg-2 col-md-3 col-sm-4">
                                @Html.LabelFor(model => model.Venue, new { @style = "font-weight: normal;" })
                            </td>
                            <td class="right-cell col-lg-2 col-md-3 col-sm-4">
                                @Html.ActionLink(Model.Venue.Name, "Details", "Venues", new { area = "LocationAdmin", id = Model.Venue.Id }, new { @class = "table-link" })
                                @Html.ValidationMessageFor(model => model.Venue.Name, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td class="left-cell col-lg-2 col-md-3 col-sm-4">
                                @Html.LabelFor(model => model.AvailableVenues, new { @style = "font-weight: normal;" })
                            </td>
                            <td class="right-cell col-lg-2 col-md-3 col-sm-4">
                                @Html.DropDownListFor(model => model.VenueId, availableVenues, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.AvailableVenues, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td class="left-cell col-lg-2 col-md-3 col-sm-4">
                                @Html.LabelFor(model => model.PrizePool, new { @style = "font-weight: normal;" })
                            </td>
                            <td class="right-cell col-lg-2 col-md-3 col-sm-4">
                                @Html.EditorFor(model => model.PrizePool, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PrizePool, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td class="left-cell col-lg-2 col-md-3 col-sm-4">
                                @Html.LabelFor(model => model.Description, new { @style = "font-weight: normal;" })
                            </td>
                            <td class="right-cell col-lg-2 col-md-3 col-sm-4">
                                @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td class="left-cell col-lg-2 col-md-3 col-sm-4">
                                @Html.LabelFor(model => model.TierType, new { @style = "font-weight: normal;" })
                            </td>
                            <td class="right-cell col-lg-2 col-md-3 col-sm-4">
                                @Html.EnumDropDownListFor(model => model.TierType,  new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.TierType, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td class="left-cell col-lg-2 col-md-3 col-sm-4">
                                @Html.LabelFor(model => model.StartDate, new { @style = "font-weight: normal;" })
                            </td>
                            <td class="right-cell col-lg-2 col-md-3 col-sm-4">
                                @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td class="left-cell col-lg-2 col-md-3 col-sm-4">
                                @Html.LabelFor(model => model.EndDate, new { @style = "font-weight: normal;" })
                            </td>
                            <td class="right-cell col-lg-2 col-md-3 col-sm-4">
                                @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                    </table>
                    <br />
                    <div class="form-group">
                        <div class="col-lg-10 col-md-10 col-sm-10">
                            @Html.SubmitButton("Save")
                        </div>
                    </div>
                    <br /><br />
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-3 col-sm-3" style="padding-top: 40px;">
            <ul>
                <li>@Html.ActionLink("Back To List", "Index", null, new { @class = "btn btn-primary" })</li>
                <li>@Html.ActionLink("Details", "Details", new { id = Model.Id }, new { @class = "btn btn-primary" })</li>
                @if (Model.StartDate > DateTime.Now)
                {
                    <li>@Html.ActionLink("Delete", "Delete", new { id = Model.Id }, new { @class = "btn btn-primary" })</li>
                    <li>@Html.ActionLink("Edit Logo", "EditLogo", new { id = Model.Id }, new { @class = "btn btn-primary" })</li>
                    <li>@Html.ActionLink("Edit Logo Local", "EditLogoLocal", new { id = Model.Id }, new { @class = "btn btn-primary" })</li>
                    <li>@Html.ActionLink("Associate Admin", "AssociateAdmin", new { id = Model.Id }, new { @class = "btn btn-primary" })</li>
                    <li>@Html.ActionLink("Dissociate Admin", "DissociateAdmin", new { id = Model.Id }, new { @class = "btn btn-primary" })</li>
                }
            </ul>
        </div>
        <br/>
        <br/>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
