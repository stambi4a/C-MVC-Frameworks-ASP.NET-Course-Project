@using BindingModels
@model RegisterBindingModel
@{
    ViewBag.Title = "Register";
}

@*<div class="row">*@
    @*<div class="col-md-offset-4 col-lg-offset-4 col-sm-offset-2 col-lg-4 col-md-4 col-sm-8">*@
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="row">
                <div class="col-md-offset-4 col-lg-offset-4 col-sm-offset-2 col-lg-4 col-md-4 col-sm-8">
                    @Html.AntiForgeryToken()
                    <h4 style="margin-left: 100px;">@ViewBag.Title</h4>
                    <hr />
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.Username, new { @class = "col-lg-4 col-md-4 col-sm-8 control-label" })
                        <div class="col-lg-8 col-md-8 col-sm-8">
                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control col-md-4" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, new { @class = "col-lg-4 col-md-4 col-sm-8 control-label" })
                        <div class="col-lg-8 col-md-8 col-sm-8">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control col-md-4" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-lg-4 col-md-4 col-sm-8 control-label" })
                        <div class="col-lg-8 col-md-8 col-sm-8">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-lg-4 col-md-4 col-sm-8 control-label" })
                        <div class="col-lg-8 col-md-8 col-sm-8">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-lg-4 col-md-4 col-sm-8 control-label" })
                        <div class="col-lg-8 col-md-8 col-sm-8">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <input type="submit" class="btn btn-default" value="Register" />
                        </div>
                    </div>
                </div>
            </div>
        }
                
    <div class="col-md-4">
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
