@using BindingModels
@model PlayerBindingModel
@{
    ViewBag.Title = "Create new Player";
    var availabaleCountries = Model.AvailableCountries.Select(ac => new SelectListItem { Text = ac.Name, Value = ac.Id.ToString() });
    var availableCities = Model.AvailableCities.Select(aa => new SelectListItem() { Text = aa.Name, Value = aa.Id.ToString() });
    var availabaleTeams = Model.AvailableTeams.Select(ac => new SelectListItem { Text = ac.Name, Value = ac.Id.ToString() });
}

@using (Html.BeginForm(Html.BeginForm("Create", "Players", new { Area = "PlayerAdmin" }, FormMethod.Post, new { @class = "form-horizontal", role = "form" })))
{
    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-8">
            @Html.AntiForgeryToken()
            <h3 style="margin-left: 100px;">@ViewBag.Title</h3>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Alias, new { @class = "col-lg-4 col-md-4 col-sm-6 control-label" })
                <div class="col-lg-8 col-md-8 col-sm-6">
                    @Html.TextBoxFor(m => m.Alias, new { @class = "form-control col-md-4" })
                    @Html.ValidationMessageFor(model => model.Alias, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-lg-4 col-md-4 col-sm-6 control-label" })
                <div class="col-lg-8 col-md-8 col-sm-6">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control col-md-4" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Address, new { @class = "col-lg-4 col-md-4 col-sm-6 control-label" })
                <div class="col-lg-8 col-md-8 col-sm-6">
                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control col-md-4" })
                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.BespaPoints, new { @class = "col-lg-4 col-md-4 col-sm-6 control-label" })
                <div class="col-lg-8 col-md-8 col-sm-6">
                    @Html.TextBoxFor(m => m.BespaPoints, new { @class = "form-control col-md-4" })
                    @Html.ValidationMessageFor(model => model.BespaPoints, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PrizeMoney, new { @class = "col-lg-4 col-md-4 col-sm-6 control-label" })
                <div class="col-lg-8 col-md-8 col-sm-6">
                    @Html.TextBoxFor(m => m.PrizeMoney, new { @class = "form-control col-md-4" })
                    @Html.ValidationMessageFor(model => model.PrizeMoney, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.DateOfBirth, new { @class = "col-lg-4 col-md-4 col-sm-6 control-label" })
                <div class="col-lg-8 col-md-8 col-sm-6">
                    @Html.TextBoxFor(m => m.DateOfBirth, new { @class = "form-control col-md-4" })
                    @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Country, new { @class = "col-lg-4 col-md-4 col-sm-6 control-label" })
                <div class="col-lg-8 col-md-8 col-sm-6">
                    @Html.DropDownListFor(model => model.Country, availabaleCountries, new { @class = "form-control", @placeholder = "mm/dd/yyyy" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.City, new { @class = "col-lg-4 col-md-4 col-sm-6 control-label" })
                <div class="col-lg-8 col-md-8 col-sm-6">
                    @Html.DropDownListFor(model => model.City, availableCities, new { @class = "form-control", @placeholder = "mm/dd/yyyy" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Team, new { @class = "col-lg-4 col-md-4 col-sm-6 control-label" })
                <div class="col-lg-8 col-md-8 col-sm-6">
                    @Html.DropDownListFor(model => model.Team, availabaleTeams, new { @class = "form-control", @placeholder = "mm/dd/yyyy" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <input type="submit" class="btn btn-default" value="Create" />
                </div>
            </div>
            <p>
                @Html.ActionLink("Back to List", "Index")
            </p>
        </div>
    </div>
}
<div class="col-md-4">
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
