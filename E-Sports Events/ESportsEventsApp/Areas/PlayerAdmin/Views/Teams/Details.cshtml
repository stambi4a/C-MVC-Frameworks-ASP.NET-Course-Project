@using ESportsEventsApp.Extensions
@using ViewModels
@model TeamViewModel

@{
    ViewBag.Title = $"Details for {Model.Name}";
}

<div>
    <h3>@ViewBag.Title</h3>
    <div class="row">
        <div class="col-lg-5 col-md-5 col-sm-5">
            <hr/>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.TeamLogo)
                </dt>
                
                <dd>
                    @if (Model.TeamLogo != null)
                    {
                        @Html.Image(Model.TeamLogo.Url, string.Empty, "width:50px; height:auto;")
                    }
                </dd>
                
                <dt>
                    @Html.DisplayNameFor(model => model.Location)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Location)
                </dd>
                
                <dt>
                    @Html.DisplayNameFor(model => model.Players)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PlayersToString)
                </dd>
            </dl>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
