@model BindingModels.DissociateRoleBindingModel

@{
    ViewBag.Title = "Dissociate Role";
    var associatedRoles = Model.AssociatedRoles.Select(r => new SelectListItem() { Text = r, Value = r }); ;
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-4 col-md-6 col-sm-8">
            <div class="form-horizontal">
                <h4>@Model.Username</h4>
                <hr />
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.AssociatedRoles)
                <div class="form-group">
                    @Html.LabelFor(model => model.AssociatedRoles, htmlAttributes: new { @class = "control-label col-lg-4 col-md-4 col-sm-6" })
                    <div class="col-lg-8 col-md-8 col-sm-6">
                        @Html.DisplayFor(model => model.RolesToString)
                    </div>
                </div>
                <div class="form-group">
                    @*<div class="col-md-10">
                            @Html.DropDownListFor(model => model.AvailableRoles, roles, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Roles, "", new { @class = "text-danger" })
                        </div>*@
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.RoleToRemove, htmlAttributes: new { @class = "control-label col-lg-4 col-md-4 col-sm-6" })
                    <div class="col-lg-8 col-md-8 col-sm-6">
                        @Html.DropDownListFor(model => model.RoleToRemove, associatedRoles, new {  @class = "form-control" } )
                        @Html.ValidationMessageFor(model => model.RoleToRemove, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
