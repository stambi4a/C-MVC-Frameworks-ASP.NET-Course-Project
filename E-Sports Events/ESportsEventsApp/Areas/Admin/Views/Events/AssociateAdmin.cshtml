@model BindingModels.AssociateEventAdminBindingModel

@{
    ViewBag.Title = "Associate EventAdmin for ";
    var availableAdmins = Model.AvailableAdmins.Select(aa => new SelectListItem() { Text = aa.UserName, Value = aa.Id });
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-4 col-md-6 col-sm-8">
            <div class="form-horizontal">
                <h3>@ViewBag.Title@Model.Name</h3>
                <hr />
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                @*@Html.HiddenFor(model => model.Id)*@
                <div class="form-group">
                    @Html.LabelFor(model => model.AssociatedAdmins, htmlAttributes: new { @class = "control-label col-lg-4 col-md-4 col-sm-6" })
                    <div class="col-lg-8 col-md-8 col-sm-6">
                        @Html.DisplayFor(model => model.AssociatedAdminsToString)
                    </div>
                </div>
                <div class="form-group">
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.AvailableAdmins, htmlAttributes: new { @class = "control-label col-lg-4 col-md-4 col-sm-6" })
                    <div class="col-lg-8 col-md-8 col-sm-6">
                        @Html.DropDownListFor(model => model.AssociateEventAdminId, availableAdmins, new { @class = "form-control" } )
                        @Html.ValidationMessageFor(model => model.AssociateEventAdminId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    </div>
 }
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
